# docker/Dockerfile
# Dockerfile para o servidor web Apache

FROM php:8.1-apache

# Instalar dependências necessárias
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) gd

# Instalar Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Copiar arquivos para o container
COPY ../public /var/www/html
COPY ../scripts/process_demos.php /var/www/scripts/process_demos.php
COPY ../scripts/check_server_status.sh /var/www/scripts/check_server_status.sh
COPY ../config/db.php /var/www/config/db.php

# Configurar permissões
RUN chmod +x /var/www/scripts/process_demos.php
RUN chmod +x /var/www/scripts/check_server_status.sh

# Instalar dependências do PHP
RUN composer require doctrine/dbal

# Habilitar o módulo rewrite do Apache
RUN a2enmod rewrite

# Configurar o cron job
COPY ../setup/setup_cron_job.sh /var/www/setup/setup_cron_job.sh
RUN chmod +x /var/www/setup/setup_cron_job.sh
RUN /var/www/setup/setup_cron_job.sh

# Expor a porta 80
EXPOSE 80

# Reiniciar o Apache
CMD ["apache2-foreground"]